pipeline {
 agent none
 stages {
        stage('Build') { 
            agent {
                label 'slave1'
            }
            steps { 
                echo "build sucessfully" 
                sh 'sleep 6'
            }
        }
        stage('Test'){
            steps {
                echo "Test successfully in prod" 
                sh 'sleep 6'
            }
        }
        stage('Deploy') {
            steps {
               echo "deploy successfully in production"
            }
        }
    }
}
