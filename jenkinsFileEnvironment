pipeline {
 agent any
  environment {
         APP = 'frontend'
         ENVI = 'prod'
                }
 stages {
        stage('Build') { 
            steps { 
                echo "build sucessfully" 
                echo ${env.APP}
                sh 'sleep 6'
            }
        }
        stage('Test'){
            steps {
                echo "Test successfully in prod" 
                 echo ${env.APP}
                sh 'sleep 6'
            }
        }
        stage('Deploy') {
            steps {
                echo ${env.APP}
                echo ${env.ENVI}
               echo "deploy successfully in production"
            }
        }
    }
}
